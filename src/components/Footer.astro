---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-pinterest', url: '#' }
];
---

<footer class="bg-[#2e7d32] text-[#f5f5f5] py-8">
  <div class="container mx-auto px-4 text-center">
    <p class="text-lg font-semibold">&copy; {currentYear} Herb & Harmony. All rights reserved.</p>
    <div class="flex justify-center gap-6 mt-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="hover:text-[#bf360c] transition-colors duration-300">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
  </div>
</footer>